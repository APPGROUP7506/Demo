<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regester"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regester a new acount"
        android:textSize="20sp"
        android:textColor="#b3b3b3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        />

    <EditText
        android:id="@+id/edit_reg_username"
        android:layout_marginTop="250dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType = "text"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:maxLines="1"
        android:hint="Username:"
        android:drawablePadding="5dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edit_reg_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_below="@id/edit_reg_username"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edit_reg_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Email"
        android:layout_below="@id/edit_reg_password"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edit_reg_phone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Phone"
        android:layout_below="@id/edit_reg_email"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edit_reg_hkuid"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="HKU ID"
        android:layout_below="@id/edit_reg_phone"
        android:paddingLeft="10dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:maxLines="1"
        android:layout_marginTop="15dp"
        android:drawablePadding="5dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_reg_register"
        android:layout_below="@id/edit_reg_hkuid"
        android:layout_alignLeft="@id/edit_reg_hkuid"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="-20dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_signin"
        android:text="Regester"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignStart="@id/edit_reg_hkuid" />


    <Button
        android:id="@+id/btn_reg_login"
        android:layout_marginTop="6dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_reg_hkuid"
        android:layout_alignRight="@id/edit_reg_hkuid"
        android:layout_marginRight="-20dp"
        android:background="@drawable/bg_signin"
        android:text="Log in"
        android:textColor="#ffffff"
        android:textSize="20sp" />


</RelativeLayout>