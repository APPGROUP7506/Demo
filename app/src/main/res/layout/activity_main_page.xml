<?xml version="1.0" encoding="utf-8"?>
<!-- activity_main.xml -->
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/school"/>
    <ImageView
        android:layout_width="380dp"
        android:layout_height="480dp"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/white"
        android:alpha="0.5"
        />

    <Button
        android:id="@+id/btn_view_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_intro"
        android:layout_alignRight="@id/text_intro"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_signin"
        android:text="View Courses" />

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_below="@id/text_intro"
        android:layout_alignLeft="@id/text_intro"
        android:background="@drawable/bg_signin"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="Logout"

        />
    <ImageView
        android:id="@+id/bg_tpg"
        android:layout_width="350dp"
        android:layout_height="220dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bg"
        />

    <TextView
        android:id="@+id/text_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bg_tpg"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:text="
As leading Engineering and Computer Science Curricula for Master's education, our Taught Postgraduate (TPg) curricula aim at providing advanced education and imparting up-to-date and cutting-edge knowledge to qualified students
"
        android:textColor="#000000"
        android:textSize="18sp"
         />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="580dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/hku"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="香   港   大   学\nTHE UNIVERSITTY OF HONG KONG"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="620dp"
        />
</RelativeLayout>